%br
.row
  .col-md-6
    .thumbnail
      %div{:style => 'background: #eee; width: 100%; height: 300px'}
  .col-md-6
    %p
      %h1{:style => "display: inline"}= product.title
      %span{:style => "position: relative; top: -18px !important"}
        .label.label-default= product.category.name
    %p
      %p= product.description
    %span
      %b= "Price:"
      = product.price_tag
    %br
    %br
      
.row
  .col-md-12
    .product-options
      = link_to 'Back', category_products_path, class: 'btn btn-primary'
      - if user_signed_in? and current_user == product.user
        = link_to 'Edit', edit_category_product_path(category.id, product.id), class: "btn btn-default"
.row
  %hr
.row
  .col-md-6
    %h3 Product Reviews
    = render reviews
  .col-md-4
    %h3 Write Your Review
    = render 'reviews/form'
%br

