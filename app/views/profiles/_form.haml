%br
= form_for @profile, url: profile_create_path do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  
  =fields_for @user do |ff|
    .form-group
      = ff.label :'First Name'
      = ff.text_field :firstname, class: 'form-control'
    .form-group
      = ff.label :'Last Name'
      = ff.text_field :lastname, class: 'form-control'

  .form-group
    = f.label :age
    = f.number_field :age, class: 'form-control'
  .form-group
    = f.label :address
    = f.text_area :address, class: 'form-control'
  .form-group
    = f.label :bio
    = f.text_area :bio, class: 'form-control'
  .form-group
    = f.submit 'Save', class: 'btn btn-default'
  







